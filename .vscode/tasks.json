    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello"
        },
        {
            "label": "lint web app",
            "type": "shell",
            "command": "pylint app"
        },
        {
            "label": "lint lib",
            "type": "shell",
            "command": "pylint gnucash_portfolio"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "pytest"
        },
        {
            "label": "build",
            "type": "shell",
            "dependsOn": ["lint web app", "lint lib", "test"],
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "py app",
            "problemMatcher": []
        },
        {
            "label": "open web page",
            "type": "shell",
            "command": "start http://localhost:5000",
            "problemMatcher": []
        }
    ]
}